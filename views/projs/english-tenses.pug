extends ../layouts/jqm-layout

append head
  script(src='/javascripts/jquery-fullscreen-plugin/jquery.fullscreen-min.js')
  style.
    @media all and (max-width: 35em) {
      .ui-responsive > .ui-block-a, .ui-responsive > .ui-block-b, .ui-responsive > .ui-block-c, .ui-responsive > .ui-block-d, .ui-responsive > .ui-block-e {
        width: 100%;
        float: none;
      }
    }
    .ui-page {
      background-color: white !important;
    }
    .shadow {
      box-shadow: 1px 1px 5px 1px rgba(0, 0, 0, 0.25);
    }
    .text-muted { color: gray; }

block content
  //-- MAIN page content (params should be taken as strings: title, footer)
  div(data-role='page' class='jqm-demos ui-responsive-panel' id='sorry' data-title='English Tenses')
    div(data-role='header' data-position='fixed')
      h1 Helpful materials
      a(href='http://selection4test.ru/' target='_self' data-icon='back' data-iconpos='notext') Back
      //-a(href='#' data-icon='arrow-u-r' data-iconpos='notext' id='fullScreen') FullScreen
      a(href='#' style='border-radius:25px;border:1px solid lightgray;').ui-btn.ui-btn-a#fullScreen FullScreen
      script.
        $(function(){
          $('#fullScreen').click( function(e){
            e.preventDefault();
            $(document).toggleFullScreen();
            this.blur();
          } );
        });
    div(role='main' class='ui-content jqm-content jqm-fullwidth')
      h1= title

      div(data-role='collapsibleset'  data-collapsed-icon='arrow-r' data-expanded-icon='arrow-d' class='shadow')
